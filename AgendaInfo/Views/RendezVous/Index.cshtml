@model IEnumerable<Agenda.Models.POCO.RendezVous>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>

    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Comment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BeginDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BeginDate)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID" class="myButton1">Edit</a> 
                            <a asp-action="Delete" asp-route-id="@item.ID" class="myButton1">Delete</a>
                            @if (item.BeginDate <= DateTime.Now) { <a asp-action="Create" asp-controller="Evaluations" asp-route-id="@item.ID" class="myButton1">Evaluation du rendez-vous</a> }
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</body>
</html>
