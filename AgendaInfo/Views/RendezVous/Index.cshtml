@model IEnumerable<Agenda.Models.POCO.RendezVous>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Comment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BeginDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Service.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Service.Duration)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BeginDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.Duration)
                    </td>
                    <td>

                        @if (item.BeginDate <= DateTime.Now)
                        {
                            if (item.Customer == ViewBag.User)
                            {<a asp-action="Create" asp-controller="Evaluations" asp-route-id="@item.ID">Evaluation du rendez-vous</a>}
                        }
                        else
                        {
                            <a asp-action="Delete" asp-route-id="@item.ID">Annuler</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
