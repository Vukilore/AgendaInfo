@model Agenda.Models.POCO.RendezVous

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Prise de rendez-vous</title>
</head>
<body>
    <h4>RendezVous  @ViewBag.ReservedDate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.IsAdmin)
            {
                <div class="form-group">
                    <label asp-for="Customer" class="control-label"></label>
                    <select asp-for="Customer" asp-items="@(new SelectList(ViewBag.ListCustomers))" class="form-control">
                        <option>Veuillez choisir un client</option>
                    </select>
                    <span asp-validation-for="Customer" class="text-danger"></span>
                </div>
            }
            else
            {
                <label asp-for="Customer" class="control-label"></label>
                <input asp-for="Customer" class="form-control" value="@ViewBag.User" ReadOnly="readonly" id="Customer" name="Customer" />
                <span asp-validation-for="Customer" class="text-danger"></span>
            }
            <div class="form-group">
                <label asp-for="BeginDate" class="control-label"></label>
                <input asp-for="BeginDate" class="form-control" value="@ViewBag.ReservedDate" ReadOnly="readonly" />
                <span asp-validation-for="BeginDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service" class="control-label"></label>
                <select asp-for="Service" asp-items="@(new SelectList(ViewBag.ListServices))" class="form-control">
                    <option>Veuillez choisir un service</option>
                </select>
                <span asp-validation-for="Service" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Reserver" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Agenda"><< Retour au calendrier</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
