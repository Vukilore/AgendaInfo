@model IEnumerable<Agenda.Models.POCO.Evaluation>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Rate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RendezVous.Customer.Name)   - 
                    @Html.DisplayNameFor(model => model.RendezVous.Customer.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RendezVous.Service.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Rate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RendezVous.Customer.Name)
                    @Html.DisplayFor(modelItem => item.RendezVous.Customer.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RendezVous.Service.Name)
                </td>
                @if (item.RendezVous.Customer == ViewBag.User)
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Editer</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Supprimer</a>
                    </td>
                }
            </tr>
            }
        </tbody>
    </table>
</body>
</html>