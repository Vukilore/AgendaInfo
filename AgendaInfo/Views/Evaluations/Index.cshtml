@model IEnumerable<Agenda.Models.POCO.Evaluation>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create" class="myButton"><img src="~/image/add1.svg" style="width:32px; height:32px;" />Creer nouvelle évaluation</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="myButton1">Editer</a> |
                <a asp-action="Details" asp-route-id="@item.ID" class="myButton1">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.ID" class="myButton1">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
